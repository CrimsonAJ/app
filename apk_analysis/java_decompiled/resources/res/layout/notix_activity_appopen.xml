<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_appopen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_appopen_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_appopen_continue_container"
            android:background="@drawable/notix_sh_left_rounded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="0.8">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_appopen_app_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textColor="#7a7c7f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/notix_continue_to_app"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:id="@+id/tv_appopen_appname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <FrameLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/fl_appopen_continue"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_appopen_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notix_ic_chevron_right_24"/>
                <ProgressBar
                    android:id="@+id/pb_appopen_continue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/notix_primary_color"
                    android:indeterminateTintMode="src_atop"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_appopen_content_card"
        android:background="@drawable/notix_sh_top_rounded"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_appopen_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:layout_weight="0.8"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_appopen_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/tv_appopen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="32dp"
                android:maxLines="3"
                android:textAlignment="center"
                android:layout_marginHorizontal="32dp"/>
            <TextView
                android:textSize="18sp"
                android:textColor="#5f5f5f"
                android:id="@+id/tv_appopen_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:maxLines="3"
                android:textAlignment="center"
                android:layout_marginHorizontal="32dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/iv_appopen_click"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/notix_ic_circle_chevron_right_40"/>
    </LinearLayout>
</LinearLayout>
