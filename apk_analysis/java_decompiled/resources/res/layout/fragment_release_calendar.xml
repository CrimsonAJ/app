<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_release_calendar_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageLogo"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_app"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/textTitleCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_release_calendar"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/imageLogo"
        app:layout_constraintStart_toEndOf="@+id/imageLogo"
        app:layout_constraintTop_toTopOf="@+id/imageLogo"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/buttonSearch"
        android:background="@drawable/ripple_circle"
        android:padding="@dimen/dp_8"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/imageLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageLogo"
        app:srcCompat="@drawable/ic_search"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/layoutEmpty"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerCalendar">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            app:srcCompat="@drawable/ic_no_release_calendar"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            android:textColor="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_44"
            android:text="@string/title_no_release_schedule"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/message_no_release_schedule"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/recyclerCalendar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_78"
        android:layout_marginTop="@dimen/dp_28"
        app:layoutManager=".ui.views.CenterScrollLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/textTitleCalendar"
        app:spanCount="2"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRelease"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginHorizontal="@dimen/dp_20"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerCalendar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
